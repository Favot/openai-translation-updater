{
  "name": "openai-translation-updater",
  "version": "1.0.13",
  "description": "Automatically update translation files on commit using OpenAI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test:unit": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:updateFiles": "ts-node ./__test__/index.ts",
    "build": "tsc",
    "publish": "npm run build && npm publish",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Favot/openai-translation-updater.git"
  },
  "keywords": [
    "openai",
    "translation",
    "internationalization",
    "commit-hook",
    "automation"
  ],
  "author": "Favot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Favot/openai-translation-updater/issues"
  },
  "homepage": "https://github.com/Favot/openai-translation-updater#readme",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/mock-fs": "^4.13.2",
    "@types/node": "^20.8.0",
    "@types/shelljs": "^0.8.13",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mock-fs": "^5.2.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "fs": "^0.0.1-security",
    "openai": "^4.10.0",
    "path": "^0.12.7",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --ext .ts ./src --fix"
    ],
    "./src/**": [
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
